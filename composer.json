    "autoload-dev": {
        "psr-4": {
            "Solid\\App\\": "src/Tests"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.5.0"
    },
    "scripts": {
        "test": "phpunit"
    }
